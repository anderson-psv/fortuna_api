{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "command": "docker-compose exec web sh -c 'sed -i \"/xdebug.mode=off/c\\xdebug.mode=debug\" $PHP_INI_DIR/conf.d/docker-php-ext-xdebug.ini && /etc/init.d/apache2 reload'",
        "label": "enable:xdebug"
      },
      {
        "type": "shell",
        "command": "docker-compose exec web sh -c 'sed -i \"/xdebug.mode=debug/c\\xdebug.mode=off\" $PHP_INI_DIR/conf.d/docker-php-ext-xdebug.ini && /etc/init.d/apache2 reload'",
        "label": "disable:xdebug"
      }
    ]
  }